@{
    Layout = null;
}
<title>View Population data</title>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="example" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Country</th>
                    <th>Year</th>
                    <th>Total Male</th>
                    <th>Total Female</th>
                    <th>Summary</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<script>


        $(document).ready(function ()
        {
            $("#example").DataTable({
                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "ajax": {
                    "url": "/Population/LoadData",
                    "type": "POST",
                    "datatype": "json"
                },
                "columnDefs":
                [{
                    "targets": [0],
                    "visible": true,
                    "searchable": true
                }],
                "columns": [
                    { "data": "PopulationID", "name": "PopulationID", "autoWidth": true },
                    { "data": "Country", "name": "Country", "autoWidth": true },
                    { "data": "Year", "name": "Year", "autoWidth": true },
                    { "data": "TotalMale", "name": "TotalMale", "autoWidth": true },
                    { "data": "TotalFemale", "name": "TotalFemale", "autoWidth": true },
                    { "data": "Summary", "name": "Summary", "autoWidth": true },
                    {
                        "render": function (data, type, row, meta)
                        { return '<a class="btn btn-info" href="/Population/Edit/' + row.PopulationID + '">Edit</a>'; }
                    },
                    {
                        data: null, render: function (data, type, row)
                        {
                            return "<a class='btn btn-danger' onclick=DeleteData('" + row.PopulationID + "'); >Delete</a>";
                        }
                    },
                ]

            });
        });


    function DeleteData(PopulationID)
    {
        if (confirm("Are you sure you want to delete ...?"))
        {
            Delete(PopulationID);
        }
        else
        {
            return false;
        }
    }


    function Delete(PopulationID)
    {
        var url = '@Url.Content("~/")' + "Population/Delete";

        $.post(url, { id: PopulationID }, function (data)
        {
            if (data)
            {
                oTable = $('#example').DataTable();
                oTable.draw();
            }
            else
            {
                alert("Something Went Wrong!");
            }
        });
    }

</script>

